<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green6"
    tools:context=".UserInformation">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="139dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.751">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="138dp"
            android:layout_height="132dp"
            android:scaleType="centerCrop"
            android:src="@drawable/account_image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/hello_user"
        android:layout_width="243dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:elevation="4dp"
        android:text="Hello &quot;Name of user here&quot;"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="414dp"
        android:layout_height="158dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="508dp"
        android:clickable="false"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="211dp"
        android:layout_height="31dp"
        android:elevation="4dp"
        android:text="&quot;user email here&quot;"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello_user" />

    <Button
        android:id="@+id/user_my_posts"
        android:layout_width="394dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:drawableLeft="@drawable/camera1"
        android:text="My Posts"
        android:textColor="#000000"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:text="My Posts" />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Upload Picture"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="137dp"
        android:layout_height="132dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/user_my_messages"
        android:layout_width="394dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/chat"
        android:text="My Messages"
        android:textColor="#000000"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_my_posts" />

    <Button
        android:id="@+id/user_saved_posts"
        android:layout_width="394dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/star"
        android:text="Saved Posts"
        android:textColor="#000000"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_my_messages" />

</androidx.constraintlayout.widget.ConstraintLayout>